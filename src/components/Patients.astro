---
// BeforeAfterCases.astro
const cases = [
  {
    title: 'Caso 1',
    before: '/interior/f2.jpg',
    after: '/interior/f5.jpg'
  },
  {
    title: 'Caso 2',
    before: '/interior/f2.jpg',
    after: '/interior/f5.jpg'
  },
  {
    title: 'Caso 3',
    before: '/interior/f2.jpg',
    after: '/interior/f5.jpg'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">CASOS DE ÉXITO</h2>
    <p class="text-gray-600 text-center mb-12">Las sonrisas de nuestros pacientes hablan por sí solas</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {cases.map(({ title, before, after }) => (
        <div class="case-container">
          <h3 class="text-xl font-semibold mb-3">{title}</h3>
          <div class="image-compare">
            <img src={before} alt={`Antes - ${title}`} />
            <img src={after} alt={`Después - ${title}`} />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .image-compare {
    height: 400px;
    margin: 0 auto;
    max-width: 100%;
    position: relative;
  }
  
  .image-compare img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .case-container {
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    padding: 1rem;
  }
  
  /* Asegurarse de que los controles no activen otros eventos */
  :global(.icv__control) {
    pointer-events: auto !important;
    z-index: 10;
  }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/image-compare-viewer/dist/image-compare-viewer.min.css">

<script>
  // Importamos la biblioteca
  import ImageCompare from 'image-compare-viewer';
  
  // Ejecutamos después de que el contenido esté cargado
  document.addEventListener('DOMContentLoaded', () => {
    const viewers = document.querySelectorAll(".image-compare");
    viewers.forEach(element => {
      const viewer = new ImageCompare(element, {
        controlColor: "#FFFFFF",
        controlShadow: true,
        addCircle: true,
        addCircleBlur: true,
        showLabels: true,
        labelOptions: {
          before: 'Antes',
          after: 'Después',
          onHover: false
        },
        // Asegúrate de inicializar con eventos personalizados
        onInit: (instance) => {
          // Cuando el componente esté inicializado, añadimos eventos
          setTimeout(() => {
            const control = element.querySelector(".icv__control");
            if (control) {
              control.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
              });
              
              control.addEventListener("mousedown", (e) => {
                e.preventDefault();
                e.stopPropagation();
              });
            }
          }, 100);
        }
      }).mount();
    });
  });

  // Prevenir que los clics en el divisor se propaguen
  document.addEventListener('click', function(e) {
    if (e.target.closest('.icv__control')) {
      e.preventDefault();
      e.stopPropagation();
    }
  }, true);
</script>
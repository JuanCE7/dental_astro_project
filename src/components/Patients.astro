---
const cases = [
  {
    title: "Caso 1",
    before: "/cases/caso1-1.webp",
    after: "/cases/caso1-2.webp",
    description: "Ortodoncia caso especial",
    rating: 4,
    timeframe: "1 año, 2 meses",
  },
  {
    title: "Caso 2",
    before: "/cases/caso2-1.webp",
    after: "/cases/caso2-2.webp",
    description: "Ortodoncia completa",
    rating: 5,
    timeframe: "1 año",
  },
  {
    title: "Caso 3",
    before: "/cases/caso3-1.webp",
    after: "/cases/caso3-2.webp",
    description: "Blanqueamiento",
    rating: 4,
    timeframe: "1 hora",
  },
];
---

<section id="patients" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4 text-primary" data-aos="fade-up">
      CASOS DE ÉXITO
    </h2>
    <p class="text-center mb-12 text-cyan-700" data-aos="fade-up">
      Las sonrisas de nuestros pacientes hablan por sí solas
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        cases.map(({ title, before, after, description, rating, timeframe }, index) => (
          <div
            class="case-container"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <h3 class="text-xl font-semibold mb-3 text-cyan-800">{title}</h3>
            <div class="image-compare">
              <img src={before} alt={`Antes - ${title}`} />
              <img src={after} alt={`Después - ${title}`} />
            </div>
            <p class="mt-4 text-cyan-700">{description}</p>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                {Array.from({ length: rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <span class="text-sm text-cyan-700">Duración del procedimiento: {timeframe}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .image-compare {
    height: 400px;
    margin: 0 auto;
    max-width: 100%;
  }

  .image-compare img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .case-container {
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    padding: 1rem;
  }
</style>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/image-compare-viewer/dist/image-compare-viewer.min.css"
/>

<script>
  // Importamos la biblioteca de forma adecuada
  import ImageCompare from "image-compare-viewer";

  // Ejecutamos después de que el contenido esté cargado
  document.addEventListener("DOMContentLoaded", () => {
    const viewers = document.querySelectorAll(".image-compare");
    viewers.forEach((element) => {
      new ImageCompare(element, {
        controlColor: "#FFFFFF",
        controlShadow: true,
        addCircle: true,
        addCircleBlur: true,
        showLabels: true,
        labelOptions: {
          before: "Antes",
          after: "Después",
          onHover: false,
        },
      }).mount();
    });
  });
</script>

---
const cases = [
  {
    title: "Caso 1",
    before: "/cases/caso1-1.jpg",
    after: "/cases/caso1-2.jpg",
  },
  {
    title: "Caso 2",
    before: "/cases/caso2-1.jpg",
    after: "/cases/caso2-2.jpg",
  },
  {
    title: "Caso 3",
    before: "/cases/caso3-1.jpg",
    after: "/cases/caso3-2.jpg",
  },
];
---

<section id="patients" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4" data-aos="fade-up">
      CASOS DE ÉXITO
    </h2>
    <p class="text-gray-600 text-center mb-12" data-aos="fade-up">
      Las sonrisas de nuestros pacientes hablan por sí solas
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        cases.map(({ title, before, after }, index) => (
          <div
            class="case-container"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <h3 class="text-xl font-semibold mb-3">{title}</h3>
            <div class="image-compare">
              <img src={before} alt={`Antes - ${title}`} />
              <img src={after} alt={`Después - ${title}`} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .image-compare {
    height: 400px;
    margin: 0 auto;
    max-width: 100%;
  }

  .image-compare img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .case-container {
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    padding: 1rem;
  }
</style>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/image-compare-viewer/dist/image-compare-viewer.min.css"
/>

<script>
  // Importamos la biblioteca de forma adecuada
  import ImageCompare from "image-compare-viewer";

  // Ejecutamos después de que el contenido esté cargado
  document.addEventListener("DOMContentLoaded", () => {
    const viewers = document.querySelectorAll(".image-compare");
    viewers.forEach((element) => {
      new ImageCompare(element, {
        controlColor: "#FFFFFF",
        controlShadow: true,
        addCircle: true,
        addCircleBlur: true,
        showLabels: true,
        labelOptions: {
          before: "Antes",
          after: "Después",
          onHover: false,
        },
      }).mount();
    });
  });
</script>

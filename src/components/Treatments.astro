import TreatmentModal from "./TreatmentModal";
---

<section class="py-20 bg-gray-50" id="treatments">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl font-bold text-center mb-4 text-primary"
      data-aos="fade-up"
      data-aos-duration="1000"
    >
      NUESTROS TRATAMIENTOS
    </h2>
    <p
      class="text-center mb-12 text-lg max-w-2xl mx-auto text-cyan-700"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="200"
    >
      Ofrecemos una amplia gama de servicios dentales utilizando tecnología de
      vanguardia y técnicas modernas
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((service, index) => (
          <div
            class="relative group overflow-hidden rounded-2xl cursor-pointer shadow-lg hover:shadow-2xl transition-all duration-500"
            data-aos="fade-up"
            data-aos-duration="1000"
            data-aos-delay={index * 100}
            onclick={`window.openTreatmentModal(${JSON.stringify(service)})`}
          >
            <img
              src={service.image}
              alt={service.title}
              class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-cyan-900/80 to-transparent flex items-end p-6 transform transition-transform duration-500">
              <div>
                <h3 class="text-white text-2xl font-bold mb-2">
                  {service.title}
                </h3>
                <p class="text-sand-100 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  {service.description.substring(0, 100)}...
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <TreatmentModal client:load />
</section>

<script>
  window.openTreatmentModal = (service) => {
    const event = new CustomEvent("openModal", { detail: service });
    document.dispatchEvent(event);
  };
</script>
